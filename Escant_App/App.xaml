            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource BlueColor}"/>
                <Setter Property="BarTextColor" Value="{StaticResource WhiteColor}"/>
            </Style>


            <!--  STYLES  -->
            <Style x:Key="BaseLabelStyle" TargetType="{x:Type Label}" />

            <Style BasedOn="{StaticResource BaseLabelStyle}" TargetType="{x:Type Label}" />

            <Style
                x:Key="PoppinsBoldLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource PoppinsBold}" />
            </Style>

            <Style
                x:Key="PoppinsLightLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource PoppinsLight}" />
            </Style>

            <Style
                x:Key="PoppinsMediumLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource PoppinsMedium}" />
            </Style>

            <Style
                x:Key="PoppinsSemiBoldLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource PoppinsSemiBold}" />
            </Style>

            <Style
                x:Key="NunitoBoldLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource NunitoBold}" />
            </Style>

            <Style
                x:Key="NunitoLightLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource NunitoLight}" />
            </Style>

            <Style
                x:Key="NunitoRegularLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource NunitoRegular}" />
            </Style>

            <Style
                x:Key="SpectralRegularLabelStyle"
                BasedOn="{StaticResource BaseLabelStyle}"
                TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource SpectralRegular}" />
            </Style>

            <Style x:Key="BaseEntryStyle" TargetType="{x:Type ctrls:ExtendedEntry}">
                <Setter Property="FontFamily" Value="{StaticResource NunitoRegular}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource BlackTextColor}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource BlackTextColor}" />
                <!--<Setter Property="HeightRequest"
                        Value="45" />-->
                <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Opacity" Value="0.4" />
                <Setter Property="FocusLineColor" Value="{StaticResource GreenColor}" />
                <Setter Property="InvalidLineColor" Value="{StaticResource ValidationErrorColor}" />
                <Style.Triggers>
                    <Trigger TargetType="Entry" Property="IsFocused" Value="True">
                        <Setter Property="Opacity" Value="1" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style BasedOn="{StaticResource BaseEntryStyle}" TargetType="{x:Type ctrls:ExtendedEntry}" />

            <Style x:Key="BaseButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="BorderRadius" Value="0" />
                <Setter Property="HeightRequest" Value="73" />
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="FontSize" Value="{StaticResource MidMediumSize}" />
                <Setter Property="FontFamily" Value="{StaticResource SpectralBold}" />
            </Style>

            <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="{x:Type Button}" />

            <Style TargetType="{x:Type ctrls:ButtonFrame}">
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style TargetType="{x:Type ActivityIndicator}">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="WidthRequest">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="Android, iOS" Value="100" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
