                                <!--#endregion 22. Valor Rentabilidad-->
                                                                
                                <!--#region 23. Valor Utilidad-->
                                <inputLayout:SfTextInputLayout
                            Grid.Row="23"
                            ContainerBackgroundColor="Transparent"
                            ContainerType="Outlined"
                            IsEnabled="false"
                            IsVisible="{Binding IsVisibleValorUtilidad}"
                            FocusedColor="{DynamicResource colPrim}"                            
                            Hint="{texts:Translate ValorUtilidadHint}"
                            HorizontalOptions="Fill"
                            LeadingViewPosition="Inside"
                            TrailingViewPosition="Inside">
                                    <!-- <Entry Focused="OnEmpresa_Focused" Text="{Binding PorcentajeDescuento.ValorNumerico}" />-->
                                    <local:CustomSfNumericTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"                    
                                        BorderColor="Transparent"
                                        FormatString="c"
                                        MaximumNumberDecimalDigits="2"
                                        TextAlignment="End"
                                        Culture="{Binding Cultura}"
                                        TextColor="{DynamicResource colSec}"
                                        Value="{Binding ValorUtilidad}" 
                                 />
                                    <inputLayout:SfTextInputLayout.LeadingView>
                                        <Label
                                    FontSize="18"
                                    Text="&#xf53a;"
                                    TextColor="{DynamicResource colPrim}"
                                    VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform
                                            x:TypeArguments="x:String"
                                            Android="fa-solid-900.ttf#Font Awesome 5 Free Solid"
                                            iOS="Font Awesome 5 Free" />
                                            </Label.FontFamily>
                                        </Label>
                                    </inputLayout:SfTextInputLayout.LeadingView>
                                </inputLayout:SfTextInputLayout>
                                <!--#endregion 23. Valor Utilidad-->

                                <!--#region 24. Período de Incremento de Valor-->
                                <inputLayout:SfTextInputLayout
                            Grid.Row="24"
                            ContainerBackgroundColor="Transparent"
                            ContainerType="Outlined"
                            FocusedColor="{DynamicResource colPrim}"                            
                            Hint="{texts:Translate PeriodoIncrementoPrecioHint}"                                    
                            HorizontalOptions="Fill"
                            LeadingViewPosition="Inside"
                            TrailingViewPosition="Inside">
                                    <inputLayout:SfTextInputLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPeriodoIncrementoCommand}" />
                                    </inputLayout:SfTextInputLayout.GestureRecognizers>
                                    <!-- <Entry Focused="OnEmpresa_Focused" Text="{Binding PorcentajeDescuento.ValorNumerico}" />-->
                                    <Entry IsReadOnly="True" Text="{Binding PeriodoIncremento}" />
                                    <inputLayout:SfTextInputLayout.LeadingView>
                                        <Label
                                    FontSize="18"
                                    Text="&#xf295;"
                                    TextColor="{DynamicResource colPrim}"
                                    VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform
                                            x:TypeArguments="x:String"
                                            Android="fa-solid-900.ttf#Font Awesome 5 Free Solid"
                                            iOS="Font Awesome 5 Free" />
                                            </Label.FontFamily>
                                        </Label>
                                    </inputLayout:SfTextInputLayout.LeadingView>
                                    <inputLayout:SfTextInputLayout.TrailingView>
                                        <Label
                                    FontSize="18"
                                    Text="&#xf0dd;"
                                    TextColor="{DynamicResource colPrim}"
                                    VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform
                                            x:TypeArguments="x:String"
                                            Android="fa-solid-900.ttf#Font Awesome 5 Free Solid"
                                            iOS="Font Awesome 5 Free" />
                                            </Label.FontFamily>
                                        </Label>
                                    </inputLayout:SfTextInputLayout.TrailingView>
                                </inputLayout:SfTextInputLayout>
                                <!--#endregion 24. Período de Incremento de Valor-->

                                <!--#region 25. Valor Incremento-->
                                <inputLayout:SfTextInputLayout
                            Grid.Row="25"
                            ContainerBackgroundColor="Transparent"
                            ContainerType="Outlined"                            
                            FocusedColor="{DynamicResource colPrim}"                            
                            Hint="{texts:Translate ValorIncrementoHint}"
                            HorizontalOptions="Fill"
                            LeadingViewPosition="Inside"
                            TrailingViewPosition="Inside">
                                    <!-- <Entry Focused="OnEmpresa_Focused" Text="{Binding PorcentajeDescuento.ValorNumerico}" />-->
                                    <local:CustomSfNumericTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"                    
                                        BorderColor="Transparent"
                                        FormatString="c"
                                        MaximumNumberDecimalDigits="2"
                                        SelectAllOnFocus="True"
                                        TextAlignment="End"
                                        Culture="{Binding Cultura}"
                                        TextColor="{DynamicResource colSec}"
                                        Value="{Binding ValorIncremento}" 
                                 />
                                    <inputLayout:SfTextInputLayout.LeadingView>
                                        <Label
                                    FontSize="18"
                                    Text="&#xf53a;"
                                    TextColor="{DynamicResource colPrim}"
                                    VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform
                                            x:TypeArguments="x:String"
                                            Android="fa-solid-900.ttf#Font Awesome 5 Free Solid"
                                            iOS="Font Awesome 5 Free" />
                                            </Label.FontFamily>
                                        </Label>
                                    </inputLayout:SfTextInputLayout.LeadingView>
                                </inputLayout:SfTextInputLayout>
                                <!--#endregion 25. Valor Incremento-->

                                <!--#region 26. Posee Stock-->
                                <StackLayout Margin="10,0,0,10" Orientation="Horizontal" Grid.Row="26" >
                                    <Label Style="{StaticResource AppSettingCheckItemLabelStyle}" Text="{texts:Translate PoseeStockHint}" />
                                    <button:SfSwitch
                                        Margin="8,0"
                                        AllowIndeterminateState="True"
                                        HeightRequest="28"
                                        HorizontalOptions="EndAndExpand"
                                        IsOn="{Binding PoseeStock}"                            
                                        VisualType="Cupertino">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="On">
                                                    <VisualState.Setters>
                                                        <Setter Property="SwitchSettings">
                                                            <Setter.Value>
                                                                <button:CupertinoSwitchSettings
                                                        x:TypeArguments="button:OnState"
                                                        ThumbBorderColor="{DynamicResource Gray-500}"
                                                        ThumbColor="{DynamicResource Gray-White}"
                                                        TrackBorderColor="{DynamicResource Gray-200}"
                                                        TrackColor="{DynamicResource RedColor}" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Off">
                                                    <VisualState.Setters>
                                                        <Setter Property="SwitchSettings">
                                                            <Setter.Value>
                                                                <button:CupertinoSwitchSettings
                                                        x:TypeArguments="button:OffState"
                                                        ThumbBorderColor="{DynamicResource Gray-200}"
                                                        ThumbColor="{DynamicResource Gray-White}"
                                                        TrackBorderColor="{DynamicResource Gray-200}"
                                                        TrackColor="{DynamicResource Gray-500}" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </button:SfSwitch>
                                </StackLayout>
                                <!--#endregion 26. Posee Stock-->

                                <!--#region 27. Descripción-->                                
                                <inputLayout:SfTextInputLayout
                                Grid.Row="27"
                                ContainerBackgroundColor="Transparent"
                                ContainerType="Outlined"
                                FocusedColor="{DynamicResource colPrim}"
                                Hint="{texts:Translate NoteHint}"
                                HorizontalOptions="Fill"
                                LeadingViewPosition="Inside">
                                    <Editor HeightRequest="80" Text="{Binding Descripcion}" />
                                    <inputLayout:SfTextInputLayout.LeadingView>
                                        <Label
                                        FontSize="18"
                                        Text="&#xf044;"
                                        TextColor="{DynamicResource colPrim}"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform
                                                x:TypeArguments="x:String"
                                                Android="fa-solid-900.ttf#Font Awesome 5 Free Solid"
                                                iOS="Font Awesome 5 Free" />
                                            </Label.FontFamily>
                                        </Label>
                                    </inputLayout:SfTextInputLayout.LeadingView>
                                </inputLayout:SfTextInputLayout>
                                <!--#endregion 27. Descripción-->
                                
                            </Grid>
                        </ScrollView>
                    </yummy:PancakeView>
                </Grid>
            </ScrollView>
            <customViews:LoadingIndicator
                Grid.Row="0"
                HorizontalOptions="Fill"
                IsRunning="{Binding IsBusy, Mode=TwoWay}"
                VerticalOptions="Fill" />
        </Grid>
    </ContentPage.Content>
    <!--#endregion 3. CONTENIDO  -->
</ContentPage>